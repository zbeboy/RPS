    <definition name="mainlayout" template="user/mainlayout.html">
        <put-attribute name="head" value="user/head.html"/>
        <put-attribute name="header" value="user/header.html"/>
        <put-attribute name="upload" value="user/upload.html"/>
        <put-attribute name="nav" value="user/classnav.html"/>
